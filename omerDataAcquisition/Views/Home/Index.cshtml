@model CharStatus
@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/paint.js"></script>
@if (Model != null){
    <input id="charId" name="charId" type="hidden" value="@Model.id">
        <div class="text-center">
            <h3> Dibuja en el recuadro en blanco el siguiente caracter: "@Model.letter" <span style="white-space: nowrap;">< @Model.name ></span> </h3>
            <p>Número de capturas: @Model.count</p>
        </div>

        <div class="container" style="background-color: #eee;">
            <div class="row">
                <div id="canvasContainer" class="col text-center">
                    <canvas id="can" class="mx-auto" width="400" height="400"></canvas>
                </div>
            </div>
            <div class="row">
                    
                <div class="col">
                    <button type="button" class="btn btn-outline-info btn-lg btn-block" onclick="clearCanvas()">Limpiar</button>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-success btn-lg btn-block" onclick="send()">Enviar</button>
                </div>
            </div>
        </div>
}else{
    <div class="text-center">
        <h3> Ya se ha completado la captura de datos. <br> ¡Gracias!</h3>
    </div>
}
    